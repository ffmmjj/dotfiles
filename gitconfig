[alias]
	pr = pull --rebase
	co = checkout
	cm = commit
	st = status -sb
	lg = log --pretty=format:"%C(yellow)%h%Cred%d\\ %Creset%s%Cblue\\ [%cn]" --decorate
[push]
	default = matching
[core]
	autocrlf = input
[pull]
	rebase = true
[rerere]
	enabled = true
[core]
  excludesfile =  ~/.gitignore_global

